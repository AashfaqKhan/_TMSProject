@model IEnumerable<TMS_DTO.DTOs.UserDTO>
@using TMS_BAL.Service.IService



<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>User List</h3>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">Users</div>
                    <div class="card-body">
                        <p class="card-title">
                            <a asp-action="Create" class="btn btn-sm btn-outline-primary"><i class="fas fa-user-plus"></i> Add User</a>
                             <a asp-action="UserRole" asp-controller="UserRole" class="btn btn-sm btn-outline-primary float-end"><i class="fas fa-user-shield"></i> User Roles</a> 

                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover" id="dataTables-example" width="100%">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                       @* <th>Gender</th> *@
                                        <th>Address</th>
                                        <th>Status</th>
                                        <th>PhoneNo</th>
                                        <th>Role</th>
                                        <th>DOB</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>

                                            <td>@user.FirstName @user.LastName</td>
                                            <td>@user.Email</td>
                                           @* <td>@user.GenderId</td> *@
                                            <td>@user.Address1</td>
                                            <td>
                                                @if (user.Status)
                                                {
                                                    <input type="checkbox" value="@user.Status" checked="checked" disabled />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" value="@user.Status" disabled />
                                                }
                                            </td>
                                            <td>@user.PhoneNo</td>
                                            <td>@user.RoleName</td>
                                            <td>@user.DOB.ToString("yyyy-MM-dd")</td>
                                            <td>
                                       @*          <a asp-action="Details" asp-route-id="@user.Id">Details</a> | *@

                                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-info btn-rounded"><i class="fas fa-user-edit"></i></a>
                                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                 
                            <a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-sm "><i class="fas fa-arrow-alt-circle-left"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>