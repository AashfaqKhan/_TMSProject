@model IEnumerable<TMS_DTO.DTOs.UserRoleDTO>

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>UserRole List</h3>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">User Role</div>
                    <div class="card-body">
                        <p class="card-title">
                            <a asp-action="Create" class="btn btn-sm btn-outline-primary"><i class="fas fa-user-plus"></i> Add Role</a>

                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover" id="dataTables-example" width="100%">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>IsActive</th>
                                        
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>

                                            <td>@user.Name</td>
                                             <td>
                                                @if (user.IsActive)
                                                {
                                                    <input type="checkbox" value="@user.IsActive" checked="checked" disabled />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" value="@user.IsActive" disabled />
                                                }
                                            </td> 
                                                <td>
                                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-info btn-rounded"><i class="fas fa-user-edit"></i></a>
                                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                            <a asp-action="Users" asp-controller="User" class="btn btn-primary btn-sm "><i class="fas fa-arrow-alt-circle-left"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>