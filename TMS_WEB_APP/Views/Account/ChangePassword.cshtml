@model TMS_DTO.DTOs.ChangePasswordDTO
@{
    Layout = "_Layout";
}



<div style="padding:60px">
   
    <div class="col-lg-8">
        
        <div class="card">
            @if (TempData["errorpassword"] != null)
            {
                <div class="toast align-items-center border-0 m-2" role="alert" style="background-color:#f8d7da; color:#842029;position:absolute;  left:17%;" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi-exclamation-octagon-fill"></i>
                            <span class="fas fa-times-circle" style="color:#842029"></span> <strong class="mx-0"> Ohhh...</strong> @TempData["errorpassword"]
                        </div>
                        <button type="button" class="btn-close btn-close-dark me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            }
            <div class="card-header">Change your Password</div>
            <div class="card-body">
               
                
                <form asp-action="ChangePassword" class="needs-validation" novalidate accept-charset="utf-8">
                    <div class="row g-2">
                        <div class="mb-3 col-md-8">
                            <label asp-for="CurrentPassword" for="CurrentPassword" class="form-label">Current Password:</label>
                            <input asp-for="CurrentPassword" type="password" id="CurrentPassword" name="CurrentPassword" class="form-control" placeholder="Enter Your Current Password" />
                        </div>
                    </div>
                    <div class="row g-2">
                        <div class="mb-3 col-md-8">
                            <label asp-for="NewPassword" for="NewPassword" class="form-label">New Password:</label>
                            <input asp-for="NewPassword" type="password" id="NewPassword" name="NewPassword" class="form-control" placeholder="Enter Your New Password" />
                        </div>
                    </div>
                    <div class="row g-2">
                        <div class="mb-3 col-md-8">
                            <label asp-for="ConfirmNewPassword" for="ConfirmNewPassword" class="form-label">Confirm Password:</label>
                            <input asp-for="ConfirmNewPassword" type="password" id="ConfirmNewPassword" name="ConfirmNewPassword" class="form-control" placeholder="Enter Your Confirm Password" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-sm " id="liveToastBtn"><i class="fas fa-save"></i> Change</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Activate toast
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        var toastList = toastElList.map(function (toastEl) {
            return new bootstrap.Toast(toastEl);
        });
        toastList.forEach(toast => toast.show()); // Show toast
    </script>
}
